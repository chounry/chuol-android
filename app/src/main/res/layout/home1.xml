<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <ImageView
            android:id="@+id/imgView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/slide1"
            android:scaleType="centerCrop" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="#fff"
            android:text="For Sale"
            android:textStyle="bold"
            android:textSize="10sp"
            android:shadowColor="#000"
            android:shadowDx="0"
            android:shadowDy="6"
            android:shadowRadius="50"
            android:background="@drawable/for_sale_rent_round"
            android:paddingHorizontal="9dp"
            android:paddingVertical="3dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:background="#68000000"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <TextView
                android:id="@+id/title_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luxury House"
                android:textStyle="bold"
                android:textColor="#FFFF"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$20000"
                android:textColor="#4AA9D3"
                android:textStyle="bold"
                android:textSize="20dp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="0,1,2">

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Address"
                        android:textColor="#FFFF" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:inputType="textMultiLine"
                        android:text="Toul Kork, Phnom 435908 349058 "
                        android:textColor="#FFFF" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Location"
                        android:textColor="#FFFF" />

                    <TextView
                        android:id="@+id/location"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Phnom Penh"
                        android:textColor="#FFFF" />
                </TableRow>

                <TableRow android:layout_height="9dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.3"
                        android:text="Type"
                        android:textColor="#FFFF" />

                    <TextView
                        android:id="@+id/type"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.7"
                        android:text="Villa"
                        android:textColor="#FFFF" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>









